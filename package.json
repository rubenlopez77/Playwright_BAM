{
  "name": "playwright-cucumber-ts",
  "version": "1.0.0",
  "scripts": {
    "test": "cucumber-js",
    "build:tools": "npm --prefix tools/eslint-plugin-bam-ux run build",
    "validate:reports": "ts-node ./scripts/validate.report.ts",
    "lint:tests": "eslint \"steps/**/*.ts\"",
    "validate:ux": "ts-node scripts/validate-uxmaps.ts",
    "bms:validate": "ts-node scripts/validate-bms.ts",
    "bms:validate:strict": "cross-env BMS_STRICT=true ts-node scripts/validate-bms.ts",
     "bms:ast": "ts-node scripts/show-bms-ast.ts",
    "quality:check": "npm run build:tools && npm run lint:tests && npm run validate:ux"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.2.1",
    "@cucumber/pretty-formatter": "^2.4.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.4.5",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@cucumber/gherkin": "^36.1.0",
    "@cucumber/gherkin-utils": "^10.0.0",
    "@cucumber/messages": "^30.1.0",
    "@types/eslint": "^9.6.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-bam-ux": "file:tools/eslint-plugin-bam-ux",
    "module-alias": "^2.2.3",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  },
  "_moduleAliases": {
    "eslint-plugin-bam-ux": "./tools/eslint-plugin-bam-ux/dist"
  }
}
