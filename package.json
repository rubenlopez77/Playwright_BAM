{
  "name": "playwright-bdd",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "test:qa": "cross-env ENV=qa LOG=false npx cucumber-js",
    "test:qa:log": "cross-env ENV=qa LOG=true npx cucumber-js",
    "test:pre": "cross-env ENV=pre npx cucumber-js",
    "test:qa:headed": "cross-env ENV=qa HEADLESS=false TRACE=on npx cucumber-js",
    "test:qa:parallel": "cross-env ENV=qa HEADLESS=true TRACE=off npx cucumber-js --parallel 4"
  },
  "dependencies": {
    "@cucumber/cucumber": "^11.0.0",
    "@playwright/test": "^1.48.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
