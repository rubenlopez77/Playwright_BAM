{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["tests/*"],
      "@utils/*": ["helpers/utils/*"],
      "@pages/*": ["helpers/pages/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "noEmit": true
  },
  "include": ["tests", "helpers"]
}
